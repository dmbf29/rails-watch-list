<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center">
    <h1><span class="lighter"><%= link_to 'Lists', root_path %> > </span> <%= @list.name%></h1>
    <div class="div">
      <%= link_to new_list_bookmark_path(@list), class: 'btn btn-primary' do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </div>
  </div>
  <% if @list.movies.any? %>
    <div class="mt-5">
      <h3>Top Movie</h3>
      <div class="selected-movie">
        <%= render 'movies/selected', movie: @list.movies.first %>
      </div>
      <br>
      <h3>Movies</h3>
      <div class="owl-carousel owl-theme">
        <% @list.movies.each do |movie| %>
          <div class="item card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= movie.poster_url %>)">
            <%= movie.title %>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="text-center">
      <%= link_to 'Add Movie', new_list_bookmark_path(@list), class: 'btn btn-primary'  %>
    </div>
  <% end %>
</div>